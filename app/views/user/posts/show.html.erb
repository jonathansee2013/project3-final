<% provide(:page_title, @post.gadget) %>
<% provide(:user, 'active') %>

<div>
  <%= link_to 'Edit', edit_user_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Delete', user_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
</div>

<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @post.gadget %></h1>
    <p><%= @post.display_day_published %></p>
    <%= @post.body %>
  </div>
</div>
